{
  "name": "react-markdown-website",
  "private": true,
  "license": "MIT",
  "repository": "remarkjs/react-markdown",
  "bugs": "https://github.com/remarkjs/react-markdown/issues",
  "author": "Espen Hovlandsdal <espen@hovlandsdal.com>",
  "contributors": [],
  "dependencies": {},
  "peerDependencies": {},
  "devDependencies": {
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@rollup/plugin-babel": "^5.0.0",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-json": "^4.0.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-replace": "^2.0.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-sanity": "^4.0.0",
    "eslint-plugin-react": "^7.0.0",
    "jest": "^26.0.0",
    "prettier": "^2.0.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-markdown": "*",
    "remark-toc": "^7.0.0",
    "rollup": "^2.0.0",
    "rollup-plugin-node-polyfills": "^0.2.0",
    "rollup-plugin-terser": "^7.0.0"
  },
  "scripts": {
    "demo": "rollup --silent -c",
    "format": "prettier . -w --loglevel warn && eslint . --fix",
    "test": "npm run format && npm run demo"
  },
  "browserslist": "> 0.25%, not dead",
  "prettier": {
    "bracketSpacing": false,
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "eslintConfig": {
    "extends": [
      "sanity",
      "prettier",
      "plugin:react/recommended"
    ],
    "plugins": [
      "react"
    ],
    "env": {
      "node": true,
      "browser": true
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "strict": 0,
      "complexity": [
        "warn",
        15
      ]
    },
    "settings": {
      "react": {
        "version": "15.0"
      }
    }
  }
}
